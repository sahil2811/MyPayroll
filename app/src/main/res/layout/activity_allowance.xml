<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Allowance">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:text="Allowance "
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />


        <EditText
            android:id="@+id/input_search"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_shape"
            android:hint="Enter Employee ID" />


        <EditText
            android:editable="false"
            android:id="@+id/input_allowanceDate"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Allowance Date"
            android:background="@drawable/edit_text_shape"
            />

        <Button
            android:id="@+id/button_search"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorFav"
            android:text="SEARCH" />

        <Button
            android:id="@+id/button_allowanceCalculate"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorFav"
            android:text="Calculate" />





        <Button
            android:id="@+id/button_save"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorFav"
            android:text="Save" />

        <EditText
            android:editable="false"
            android:id="@+id/input_calculate"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Total Allowance"
            android:background="@drawable/edit_text_shape"
            />

        <EditText
            android:editable="false"
            android:id="@+id/input_id"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="ID"
            android:background="@drawable/edit_text_shape"
            />


        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_shape"
            android:editable="false"
            android:hint="Name" />

        <EditText
            android:editable="false"
            android:id="@+id/input_post"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Post"
            android:background="@drawable/edit_text_shape"
            />


        <EditText
            android:editable="false"
            android:id="@+id/input_Salary"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Salary"
            android:background="@drawable/edit_text_shape"
            />
        <EditText
            android:editable="false"
            android:id="@+id/input_Hra"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Hra"
            android:background="@drawable/edit_text_shape"
            />
        <EditText
            android:editable="false"
            android:id="@+id/input_Bonus"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Bonus"
            android:background="@drawable/edit_text_shape"
            />


        <EditText
            android:editable="false"
            android:id="@+id/input_Da"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Da"
            android:background="@drawable/edit_text_shape"
            />



        <EditText
            android:editable="false"
            android:id="@+id/input_Medical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Medical"
            android:background="@drawable/edit_text_shape"
            />






    </LinearLayout>
</ScrollView>